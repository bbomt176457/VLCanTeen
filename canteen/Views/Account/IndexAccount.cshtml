@model IEnumerable<canteen.Models.Food1>

@{
    ViewBag.Title = "IndexAccount";
    Layout = "~/Views/Shared/LayoutUser.cshtml";
}


<div class="menu-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="heading-title text-center">
                    <h2>Thực Đơn</h2>
                    <p></p>
                </div>
            </div>
        </div>

        <div class="row inner-menu-box">
            <div class="col-3">
                <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                    <a class="nav-link active" id="v-pills-home-tab" data-toggle="pill" href="#v-pills-home" role="tab" aria-controls="v-pills-home" aria-selected="true">Tất cả</a>
                    <a class="nav-link" id="v-pills-profile-tab" data-toggle="pill" href="#v-pills-profile" role="tab" aria-controls="v-pills-profile" aria-selected="false">Thức Uống</a>
                    <a class="nav-link" id="v-pills-messages-tab" data-toggle="pill" href="#v-pills-messages" role="tab" aria-controls="v-pills-messages" aria-selected="false">Điểm Tâm</</a>
                    <a class="nav-link" id="v-pills-settings-tab" data-toggle="pill" href="#v-pills-settings" role="tab" aria-controls="v-pills-settings" aria-selected="false">Bữa Trưa</a>
                </div>
            </div>
            <div class="" style="display:grid;grid-template-columns: 1.3fr 1.3fr 1.3fr; grid-template-rows: auto;grid-gap: 1em;">
                @foreach (var item in Model)
                {
                    <a href="@Url.Action("DetailsAccount","Account",new {id = item.Food_ID} )" class="box">
                        <div class="gallery-single fix" style="padding: 0;margin:0;">


                            <img src="~/Content/images/HuTieu.jpg" class="img-response" alt="Image">

                            <div class="why-text">

                                <h3 class="foodname">@item.Food_Name </h3>
                                <p>@item.Price</p>
                                <h5> @item.Description</h5>
                                <div class="col-md-6 mb-3 mb-md-0">
                            <button class="btn btn-primary btn-sm btn-block" style="background-color:#d65106;color:white" >Thanh Toán</button>
                        </div>
                        <div class="col-md-6">
                            <a href="/Account/IndexAccount" class="btn btn-outline-primary btn-sm btn-block" style="background-color:#d65106;color:white">Tiếp tục mua sắm</a>
                        </div>
                            </div>
                        </div>
                    </a>
                }
            </div>
        </div>

    </div>
</div>
