</head>


<div class="site-wrap">
    <div class="site-section">
        <div class="container">
            <div class="bg-light py-3">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12 mb-0"><a href="/" style="color:orangered">Home</a> <span class="mx-2 mb-0">/</span> <strong class="text-black">@Html.DisplayFor(model => model.Name)</strong></div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">

                    <img src="@Html.DisplayFor(model => model.Image)" alt="Image" class="img-fluid">
                </div>
                <div class="col-md-6">
                    <h2 class="text-black">@Html.DisplayFor(model => model.Name)</h2>
                    <p> @Html.DisplayFor(model => model.Description)</p>
                    <p><strong class=" h4" style="color:orangered">@Html.DisplayFor(model => model.Discount)VNĐ --- <del>@Html.DisplayFor(model => model.Price)VND </del></strong> </p>

                    <div class="mb-5">
                        <div class="input-group mb-3" style="max-width: 120px;">
                            <div class="input-group-prepend">
                                <button class="btn btn-outline-primary js-btn-minus" style="background-color:#d65106;color:white" type="button">&minus;</button>
                            </div>
                            <input type="text" class="form-control text-center" value="1" placeholder="1" aria-label="Example text with button addon" aria-describedby="button-addon1">
                            <div class="input-group-append">
                                <button class="btn btn-outline-primary js-btn-plus" style="background-color:#d65106;color:white" type="button">&plus;</button>
                            </div>
                        </div>
                    </div>

                    <button onclick="location.href='@Url.Action("AddItem", "Cart", new {foodId=Model.Food_ID,  amount=1} )'" style="background-color:#d65106;color:white">Đặt Ngay</button>
                    <button onclick="location.href='@Url.Action("AddItem", "Cart", new {foodId=Model.Food_ID,  amount=1} )'" style="background-color:#d65106;color:white">Thêm vào giỏ hàng</button>
                </div>
            </div>
        </div>
    </div>
   

</div>

<script src="~/Content/detail/js/aos.js"></script>
