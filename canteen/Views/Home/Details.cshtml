    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/LayoutUser.cshtml";
}
<head>
    <title>Shoppers &mdash; Colorlib e-Commerce Template</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
