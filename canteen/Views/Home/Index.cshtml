<h2></h2>
<div class="menu-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="heading-title text-center">
                    <h2>Thực Đơn</h2>
                    <p></p>
                </div>
            </div>
        </div>

        <div class="row inner-menu-box">
            <div class="col-3">
                <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                    <a class="nav-link active" id="v-pills-home-tab" data-toggle="pill" href="#v-pills-home" role="tab" aria-controls="v-pills-home" aria-selected="true">Tất cả</a>
                    <a class="nav-link" id="v-pills-profile-tab" data-toggle="pill" href="#v-pills-profile" role="tab" aria-controls="v-pills-profile" aria-selected="false">Thức Uống</a>
                    <a class="nav-link" id="v-pills-messages-tab" data-toggle="pill" href="#v-pills-messages" role="tab" aria-controls="v-pills-messages" aria-selected="false">Điểm Tâm</</a>
                    <a class="nav-link" id="v-pills-settings-tab" data-toggle="pill" href="#v-pills-settings" role="tab" aria-controls="v-pills-settings" aria-selected="false">Bữa Trưa</a>
                </div>
            </div>
            <div class="" style="display:grid;grid-template-columns: 1.3fr 1.3fr 1.3fr; grid-template-rows: auto;grid-gap: 1em;">
                @foreach (var item in Model)
                {

                    <div class="gallery-single fix" style="padding: 0;margin:0;" id="item">


                        <img src="~/Content/images/HuTieu.jpg" class="img-response" alt="Image" />
                        <div>
                            <div class="why-text">

                                <a href="@Url.Action("Details","Home",new {id = item.Food_ID} )">
                                    <h3>@item.Name </h3>
                                    <p class="h4" style="color:orangered">@item.Price -- <del style="color:black">@item.Discount </del></p>
                                    <h5> @item.Description</h5>
                                </a>
                                <button onclick="location.href='@Url.Action("AddItem", "Cart", new {foodId=item.Food_ID,  amount=1} )'" style="background-color:#d65106;color:white">Đặt Ngay</button>
                                <button style="background-color:#d65106;color:white" href="">Thêm vào giỏ hàng</button>


                            </div>
                        </div>

                    </div>

                }


            </div>

            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))





        </div>

    </div>
</div>
