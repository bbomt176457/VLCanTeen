
<!DOCTYPE html>
<html>
<!-- Basic -->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Site Metas -->
    <title>Canteen Văn Lang</title>
    <meta name="keywords" content="">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Site Icons -->
    <link rel="shortcut icon" href="~/Content/images/favicon.ico" type="image/x-icon">
    <link rel="apple-touch-icon" href="~/Content/images/apple-touch-icon.png">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css">
    <!-- Site CSS -->
    <link rel="stylesheet" href="~/Content/css/style.css">
    <!-- Responsive CSS -->
    <link rel="stylesheet" href="~/Content/css/responsive.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/Content/css/custom.css">
    <script src="https://kit.fontawesome.com/ab8492bfc3.js" crossorigin="anonymous"></script>
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Start header -->
    <header class="top-navbar">
        <nav class="navbar navbar-expand-lg navbar-light bg-light" style="height:44px">
            <div class="container">
                <a class="navbar-brand" href="index.html">
                    <img src="/Content/images/logovlu.jpg" style="height:64px ;width:64px" alt="" />
                </a>

                <div class="collapse navbar-collapse" id="navbars-rs-food">
                    <div class="navbar-nav ml-auto" style="display:flex;justify-content: space-between;width:100%;">
                        <div>
                            <li class="nav-item active"><a class="nav-link " href="/">Trang chủ</a></li>
                        </div>
                        <div class="single-sidebar">

                            <form action="">
                                <input type="text" placeholder="Search products..." style="width:500px;height:48px">
                                <input type="submit" value="Search" style="height:48px" ">
                            </form>
                        </div>


                        <div class="chile-home" style="display:flex;flex-direction:row;">
                            <li class="nav-link nav-item  ">

                                <a href=""> @Html.ActionLink(" ", "IndexCart", "Cart", null, new { @class = "nav-link nav-item fas fa-cart-plus" }) </a>


                            </li>

                            @if (!Request.IsAuthenticated)
                            {
                                <li class="nav-item active">
                                    <a class="nav-link" href="@Url.Action("SignIn", "Home")" class="nav-item active"> Đăng Nhập </a>
                                </li>
                            }
                            else
                            {
                                <li id="header_notification_bar" class="dropdown nav-link nav-item fas">
                                    <a data-toggle="dropdown" class="" href="#">

                                        <i class="fa fa-bell-o" style="color:orangered;height:initial"></i>
                                        <span class="badge bg-warning">3</span>
                                    </a>
                                    <ul class="dropdown-menu extended notification">
                                        <li>
                                            <p>Notifications</p>
                                        </li>
                                        <li>
                                            <div class="alert alert-info clearfix">
                                                <span class="alert-icon"><i class="fa fa-bolt"></i></span>
                                                <div class="noti-info">
                                                    <a href="#"> Server #1 overloaded.</a>
                                                </div>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="alert alert-danger clearfix">
                                                <span class="alert-icon"><i class="fa fa-bolt"></i></span>
                                                <div class="noti-info">
                                                    <a href="#"> Server #2 overloaded.</a>
                                                </div>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="alert alert-success clearfix">
                                                <span class="alert-icon"><i class="fa fa-bolt"></i></span>
                                                <div class="noti-info">
                                                    <a href="#"> Server #3 overloaded.</a>
                                                </div>
                                            </div>
                                        </li>

                                    </ul>
                                </li>
                                <li class="nav-item active fa fa-user nav-link nav-item" aria-hidden="true">
                                    <i id="header_notification_bar" class="dropdown">
                                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                                        </a>
                                        <ul class="dropdown-menu extended notification">
                                            <P>
                                            <li class=""><br />Hello @System.Security.Claims.ClaimsPrincipal.Current.FindFirst("name").Value</li>
                                            </P>

                                            <li>
                                                <div class="alert alert-info clearfix">

                                                    <div class="noti-info">
                                                        <a href="#"> Lịch sử đơn hàng</a>
                                                    </div>
                                                </div>
                                            </li>
                                            <li>
                                                <div class="alert alert-info clearfix">

                                                    <div class="noti-info">
                                                        <a href="@Url.Action("SignOut", "Home")"> Đăng Xuất</a>
                                                    </div>
                                                </div>
                                            </li>
                                        </ul>
                                    </i>

                                </li>


                            }
                        </div>

                    </div>
                </div>
            </div>
        </nav>
    </header>

        
    
    @RenderBody()
    <div class="customer-reviews-box">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="heading-title text-center">
                        <h2>Nhận Xét Của Khách Hàng</h2>
                        <p></p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-8 mr-auto ml-auto text-center">
                    <div id="reviews" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner mt-4">
                            <div class="carousel-item text-center active">

                                <h5 class="mt-4 mb-0"><strong class="text-warning text-uppercase">Võ Thái Quốc Thắng</strong></h5>
                                <h6 class="text-dark m-0">Sinh Viên</h6>
                                <p class="m-0 pt-3">Đồ ăn rất ngon,hợp khẩu vị.</p>
                            </div>
                            <div class="carousel-item text-center">
                                <div class="img-box p-1 border rounded-circle m-auto">
                                    <img class="d-block w-100 rounded-circle" src="images/quotations-button.png" alt="">
                                </div>
                                <h5 class="mt-4 mb-0"><strong class="text-warning text-uppercase">Nguyễn Vĩnh Trí</strong></h5>
                                <h6 class="text-dark m-0">Sinh Viên</h6>
                                <p class="m-0 pt-3">Chuẩn bị món rất đúng giờ.</p>
                            </div>
                            <div class="carousel-item text-center">
                                <div class="img-box p-1 border rounded-circle m-auto">
                                    <img class="d-block w-100 rounded-circle" src="images/quotations-button.png" alt="">
                                </div>
                                <h5 class="mt-4 mb-0"><strong class="text-warning text-uppercase">Lý Thị Huyền Châu</strong></h5>
                                <h6 class="text-dark m-0">Giảng Viên</h6>
                                <p class="m-0 pt-3">Đò ăn ngon. Chuẩn bị chu đáo, phục vụ nhiệt tình.</p>
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#reviews" role="button" data-slide="prev">
                            <i class="fa fa-angle-left" aria-hidden="true"></i>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#reviews" role="button" data-slide="next">
                            <i class="fa fa-angle-right" aria-hidden="true"></i>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Customer Reviews -->
    <!-- Start Contact info -->
    <div class="contact-imfo-box">
        <div class="container">
            <div class="row">
                <div class="col-md-4 arrow-right">
                    <i class="fa fa-volume-control-phone"></i>
                    <div class="overflow-hidden">
                        <h4>Phone</h4>
                        <p class="lead">
                            +01 123-456-4590
                        </p>
                    </div>
                </div>
                <div class="col-md-4 arrow-right">
                    <i class="fa fa-envelope"></i>
                    <div class="overflow-hidden">
                        <h4>Email</h4>
                        <p class="lead">
                            VLUCanteen@vanlanguni.com
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <i class="fa fa-map-marker"></i>
                    <div class="overflow-hidden">
                        <h4>Location</h4>
                        <p class="lead">
                            Lầu 4, Tòa nhà L-V, Trường Đại Học Văn Lang
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Contact info -->
    <!-- Start Footer -->
    <footer class="footer-area bg-f">
        <div class="container">
            <div class="row">


                <div class="col-lg-3 col-md-6">
                    <h3>Thông Tin Liên Hệ</h3>
                    <p class="lead">Trường Đại Học Văn Lang</p>
                    <p class="lead"><a href="#">+01 2000 800 9999</a></p>
                    <p><a href="#"> VLUCanteen@vanlanguni.com</a></p>
                </div>
                <div class="col-lg-3 col-md-6">
                    <h3>Giờ mở cửa</h3>
                    <p><span class="text-color"></span>7:Am - 9PM Từ thứ 2 đến thứ 7</p>

                </div>
            </div>
        </div>

        <div class="copyright">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <p class="company-name">
                            All Rights Reserved. &copy; 2018 <a href="#">Canteen Văn lang</a> Design By :
                            <a href="https://html.design/">VTQT</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        @RenderSection("jsFooter", required: false)
    </footer>


    <a href="#" id="back-to-top" title="Back to top" style="display: none;"><i class="fa fa-paper-plane-o" aria-hidden="true"></i></a>

    <!-- ALL JS FILES -->
    <script src="~/Content/js/jquery-3.2.1.min.js"></script>
    <script src="~/Content/js/popper.min.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
    <!-- ALL PLUGINS -->
    <script src="~/Content/js/jquery.superslides.min.js"></script>
    <script src="~/Content/js/images-loded.min.js"></script>
    <script src="~/Content/js/isotope.min.js"></script>
    <script src="~/Content/js/baguetteBox.min.js"></script>
    <script src="~/Content/js/form-validator.min.js"></script>
    <script src="~/Content/js/contact-form-script.js"></script>
    <script src="~/Content/js/custom.js"></script>
</html>
